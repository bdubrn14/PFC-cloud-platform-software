<% include header.html %>

<div class="text-center">

  <h1><span class="fa fa-sign-in"></span> Signup</h1>
<!--
  <h3>debugrob add captcha to block the script trolls</h3>
  <h3>debugrob send email verification with link to activate account</h3>
-->

  <% if( message.length > 0 ) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <form action="/signup" method="post">
    <div class="form-group text-left">
      <label for="username">Name</label>
      <input type="text" class="form-control" name="username" 
        placeholder="Hello #nerdfarmer, what is your name?">
    </div>

    <!-- Whatever field (name doesn't matter) is above the password field in
         a form will be saved as the "username" by chrome. -->
    <div class="form-group text-left">
      <label for="email">Email address</label>
      <input type="email" class="form-control" name="email" 
        placeholder="Enter email">
    </div>

    <div class="form-group text-left">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" 
        placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Signup</button>
  </form>

  <hr>
  <p>Already have an account? <a href="/login">Login</a></p>

